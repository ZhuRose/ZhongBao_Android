<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:minHeight="128dp">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/banner1"
        android:scaleType="fitXY"
        android:id="@+id/iconView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/titleView"
        android:text="电子科技大学体育馆"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"/>


    <TextView
        android:id="@+id/priceView"
        android:text="¥ 60"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <TextView
        android:id="@+id/statusView"
        android:text="待消费"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView" />

    <View
        android:id="@+id/line"
        android:background="@color/colorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/priceView"
        app:layout_constraintLeft_toRightOf="@id/iconView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="12dp" />

    <Button
        android:id="@+id/actionBtn"
        android:background="@drawable/btn_action"
        android:text="订单详情"
        android:textColor="@color/colorTheme"
        android:textSize="13sp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="18dp"/>

    <TextView
        android:id="@+id/timeView"
        android:text="2017-04-01"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/actionBtn"
        app:layout_constraintBottom_toBottomOf="@id/actionBtn"
        app:layout_constraintLeft_toRightOf="@id/iconView"
        android:layout_marginLeft="12dp" />



</android.support.constraint.ConstraintLayout>