<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBack"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.edu.uestc.zhongbao_android.view.BaseNavigationView
        android:id="@+id/navi"
        android:layout_width="0dp"
        android:layout_height="77dp"
        app:navigationtitle="我的订单"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </com.edu.uestc.zhongbao_android.view.BaseNavigationView>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/navi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabSelectedTextColor="@color/colorTheme"
        app:tabTextAppearance="@style/CustomTextAppearance"
        app:tabIndicatorColor="@color/colorTheme"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabGravity="fill">
        <android.support.design.widget.TabItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="待付款"/>
        <android.support.design.widget.TabItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待消费"/>
        <android.support.design.widget.TabItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="待评价"/>
    </android.support.design.widget.TabLayout>

    <View
        android:background="@color/colorLine"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="1dp">

    </android.support.v4.view.ViewPager>



</android.support.constraint.ConstraintLayout>