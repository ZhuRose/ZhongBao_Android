<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="104dp">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="80dp"
        app:srcCompat="@mipmap/banner1"
        android:scaleType="fitXY"
        android:id="@+id/iconView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/titleView"
        android:text="电子科技大学体育馆"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        android:layout_marginEnd="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconView" />

    <com.edu.uestc.zhongbao_android.view.StarView
        android:id="@+id/starView"
        android:layout_width="93dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp">
    </com.edu.uestc.zhongbao_android.view.StarView>

    <TextView
        android:text="清水河校区"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siteView"
        android:layout_marginStart="12dp"
        app:layout_constraintLeft_toRightOf="@+id/iconView"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/starView" />

    <TextView
        android:id="@+id/scoreView"
        android:text="5.0分"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@color/colorScore"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/starView"
        app:layout_constraintTop_toTopOf="@id/starView"
        app:layout_constraintBottom_toBottomOf="@id/starView"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp" />

    <TextView
        android:id="@+id/priceView"
        android:text="60"
        android:textSize="20sp"
        android:textColor="@color/colorPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/scoreView"
        android:layout_marginEnd="18dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="¥"
        android:textSize="14sp"
        android:textColor="@color/colorPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/priceView"
        app:layout_constraintTop_toTopOf="@id/priceView"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"/>


</android.support.constraint.ConstraintLayout>