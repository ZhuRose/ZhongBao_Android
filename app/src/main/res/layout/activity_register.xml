<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.edu.uestc.zhongbao_android.view.BaseNavigationView
        android:id="@+id/navi"
        android:layout_width="0dp"
        android:layout_height="77dp"
        app:navigationtitle="注册"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </com.edu.uestc.zhongbao_android.view.BaseNavigationView>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBack"
        app:layout_constraintTop_toBottomOf="@+id/navi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/logo"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/userIcon"
                    android:src="@drawable/user_icon"
                    android:scaleType="fitXY"
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="24dp" />
                <EditText
                    android:id="@+id/userEdit"
                    android:background="@null"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/userIcon"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="24dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/pwdIcon"
                    android:src="@drawable/pwd_icon"
                    android:scaleType="fitXY"
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="24dp" />
                <EditText
                    android:id="@+id/pwdEdit"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:hint="请输入密码"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/pwdIcon"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="24dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/pwdAgainIcon"
                    android:src="@drawable/pwd_icon"
                    android:scaleType="fitXY"
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="24dp" />
                <EditText
                    android:id="@+id/pwdAgainEdit"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:hint="请再次输入密码"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/pwdAgainIcon"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="24dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorBack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff">
                <ImageView
                    android:id="@+id/vertifyIcon"
                    android:src="@drawable/vertify_icon"
                    android:scaleType="fitXY"
                    android:layout_width="16dp"
                    android:layout_height="19dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="24dp" />
                <EditText
                    android:id="@+id/vertifyEdit"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:hint="请输入验证码"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="viewStart"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/vertifyIcon"
                    app:layout_constraintRight_toLeftOf="@+id/countDownBtn"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="24dp" />
                <com.edu.uestc.zhongbao_android.view.CountDownButton
                    android:id="@+id/countDownBtn"
                    android:layout_width="72dp"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="24dp"></com.edu.uestc.zhongbao_android.view.CountDownButton>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/loginBtn"
                    android:background="@drawable/btn_submit"
                    android:text="注册"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="12dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="12dp"
                    style="?android:attr/borderlessButtonStyle"/>
                <CheckBox
                    android:id="@+id/forgetButton"
                    android:background="@null"
                    android:button="@drawable/checkbox"
                    android:paddingLeft="3dp"
                    android:text="我已阅读并同意相关服务条款"
                    android:textColor="@color/colorText"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:layout_constraintTop_toBottomOf="@id/loginBtn"
                    app:layout_constraintLeft_toLeftOf="@id/loginBtn"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>